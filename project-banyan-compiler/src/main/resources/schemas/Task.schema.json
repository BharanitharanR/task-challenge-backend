{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://banyan.dev/schemas/task.schema.json",
  "title": "TaskDefinition",
  "type": "object",
  "required": ["kind", "id", "version", "spec"],
  "additionalProperties": false,

  "properties": {
    "kind": {
      "type": "string",
      "const": "Task"
    },

    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_\\-]{2,100}$"
    },

    "version": {
      "type": "integer",
      "minimum": 1
    },

    "spec": {
      "type": "object",
      "required": ["rulesetRef", "resultType"],
      "additionalProperties": false,

      "properties": {
        "rulesetRef": {
          "type": "object",
          "required": ["id","version"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9_\\-]{2,100}$"
            },
            "version": {
              "type": "integer",
              "minimum": 1
            }
          }
        },

        "resultType": {
          "type": "string",
          "enum": ["BOOLEAN", "NUMBER", "SCORE", "DURATION"]
        },

        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["on", "emit"],
            "additionalProperties": false,
            "properties": {
              "on": {
                "type": "string",
                "enum": ["SUCCESS", "FAILURE", "ALWAYS"]
              },
              "emit": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },

        "description": {
          "type": "string",
          "maxLength": 2000
        }
      }
    }
  }
}
