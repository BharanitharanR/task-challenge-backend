{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bharanitharan/schemas/task.schema.json",
  "title": "TaskDefinition",
  "type": "object",
  "required": ["kind", "id", "version", "spec"],
  "additionalProperties": false,
  "properties": {
    "kind": {
      "type": "string",
      "const": "Task",
      "description": "Identifies this definition as a Task"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-]{2,100}$",
      "description": "Globally unique task identifier"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Immutable version number of the task"
    },
    "spec": {
      "type": "object",
      "required": ["name", "description", "evidenceType", "resultType"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200,
          "description": "Human-readable name of the task"
        },
        "description": {
          "type": "string",
          "maxLength": 8000,
          "description": "Detailed description of what the task represents"
        },
        "evidenceType": {
          "type": "string",
          "minLength": 1,
          "description": "Type of evidence this task evaluates"
        },
        "resultType": {
          "type": "string",
          "enum": ["BOOLEAN", "NUMBER", "SCORE", "DURATION"],
          "description": "Result type produced by evaluating this task"
        }
      }
    }
  }
}
